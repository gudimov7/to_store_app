<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:gravity="center"
    tools:context=".RegisterActivity">

    <!-- header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="REGISTRATION" />

    <!-- registration form -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="8" >

        <!-- name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:padding="5dp"
            android:text="name" />
        <EditText
            android:id="@+id/registrationActivity_et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_row="0"
            android:padding="5dp"
            android:autofillHints="name" />
        <!-- email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:padding="5dp"
            android:text="email" />
        <EditText
            android:id="@+id/registrationActivity_et_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_row="1"
            android:padding="5dp"
            android:autofillHints="emailAddress"
            android:inputType="textEmailAddress"/>
        <!-- password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:padding="5dp"
            android:text="password" />
        <EditText
            android:id="@+id/registrationActivity_et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_row="2"
            android:padding="5dp"
            android:autofillHints="emailAddress" />
        <!-- phone number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:padding="5dp"
            android:text="phone" />
        <EditText
            android:id="@+id/registrationActivity_et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_row="3"
            android:padding="5dp"
            android:autofillHints="phone"
            android:inputType="phone"/>
        <!-- street -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:padding="5dp"
            android:text="street" />
        <EditText
            android:id="@+id/registrationActivity_et_street"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_row="4"
            android:padding="5dp"
            android:autofillHints="postalAddress"
            android:inputType="textPostalAddress"/>
        <!-- city -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:padding="5dp"
            android:text="city" />
        <EditText
            android:id="@+id/registrationActivity_et_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_row="5"
            android:padding="5dp"
            android:autofillHints="postalAddress" />
        <!-- country -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"
            android:padding="5dp"
            android:text="country" />
        <EditText
            android:id="@+id/registrationActivity_et_country"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_row="6"
            android:padding="5dp"
            android:autofillHints="postalAddress" />
    </GridLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <!-- Buttons layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <!-- clear button -->
        <Button
            android:id="@+id/registrationActivity_btn_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="5dp"
            android:text="clear" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"/>
        <!--submit button -->
        <Button
            android:id="@+id/registrationActivity_btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="5dp"
            android:text="submit" />

    </LinearLayout>



</LinearLayout>