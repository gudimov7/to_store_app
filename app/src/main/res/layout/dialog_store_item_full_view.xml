<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Item name header-->
    <TextView
        android:id="@+id/fullStoreItem_dialog_tv_itemNameHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="5dp"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <!-- pic and description layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="10">
        <!-- item image-->
        <ImageView
            android:id="@+id/fullStoreIte_dialog_iv_itemPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="6.6"/>
        <!-- item description layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3.3" >
            <!-- name view-->
            <TextView
                android:id="@+id/fullStoreItem_dialog_tv_itemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!-- age view-->
            <TextView
                android:id="@+id/fullStoreItem_dialog_tv_itemAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!-- color view-->
            <TextView
                android:id="@+id/fullStoreItem_dialog_tv_itemColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!-- material view-->
            <TextView
                android:id="@+id/fullStoreItem_dialog_tv_itemMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!-- made view-->
            <TextView
                android:id="@+id/fullStoreItem_dialog_tv_itemMade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!-- price view-->
            <TextView
                android:id="@+id/fullStoreItem_dialog_tv_itemPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <!-- buttons layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_weight="9"
        android:weightSum="7">
        <!-- add button-->
        <Button
            android:id="@+id/fullStoreItem_dialog_btn_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="back" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3" />
        <!-- add button-->
        <Button
            android:id="@+id/fullStoreItem_dialog_btn_buy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Buy" />
    </LinearLayout>

</LinearLayout>